{
  "name": "macflix",
  "version": "0.1.0",
  "description": "Macflix is Netflix on your Mac",
  "productName": "Macflix",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron src/main/main.js",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tommoor/macflix.git"
  },
  "keywords": [
    "electron",
    "desktop",
    "netflix",
    "video"
  ],
  "author": "Tom Moor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tommoor/macflix/issues"
  },
  "build": {
    "appId": "com.tommoor.macflix",
    "asar": false,
    "mac": {
      "category": "public.app-category.video",
      "icon": "assets/icons/netflix.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 140,
          "y": 180
        },
        {
          "x": 400,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "icon": "assets/icons/netflix.icns",
      "background": "assets/dmgBackground/background.tiff",
      "title": "${productName}"
    }
  },
  "dependencies": {
    "jquery": "^2.1.4",
    "underscore": "^1.7.0"
  },
  "devDependencies": {
    "electron-builder": "^17.5.0",
    "electron-prebuilt": "^0.36.0"
  }
}
